<UserControl x:Class="fMod.Pages.Settings.Properties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="Factorio Mod Path:" Margin="0,2,5,2" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Margin="2"/>
                <Button Content="..." Grid.Column="2" Margin="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="13,0,0,4"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
